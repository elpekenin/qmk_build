{
    // Note that this is HJSON, easier to work with

    // Commands are run from the location where the tool is invoked
    // AKA: **not** where the json is (should be the same path in most usecases anyway)

    "repo": "https://github.com/qmk/qmk_firmware",
    "branch": "develop",
    "keyboard": "handwired/onekey/rp2040",
    "keymap": "default",
    "operations": [
        {
            "operation": "cp",
            "orig": "example.txt",
            "dest": "quantum"
        },
        {
            "operation": "checkout",
            "files": ["drivers/painter", "quantum/painter"],
            "repo": "https://github.com/elpekenin/qmk_firmware",
            "branch": "feature/qp-sharp"
        },
        {
            "operation": "exec",
            "command": "clear",
            "at": "$HOME/.__qmk_build__",
            "can_fail": true
        }
    ]
}